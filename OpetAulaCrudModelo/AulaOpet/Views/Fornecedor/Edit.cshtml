@model AulaOpet.Models.Fornecedor

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
        <div class="panel-heading">
            Alteração de Fornecedor
        </div>

        <div class="panel-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger"})

                @Html.HiddenFor(model => model.FornecedorId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2"})

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" }})

                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger"})
                    </div>
                </div>
            </div>

            <div class="panel-footer panel-info">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Gravar alterações" class="btn btn-info" />

                    @Html.ActionLink("Retornar para listagem", "Index", null, new { @class = "btn btn-warning" })
                </div>

                <br />
                <br />
            </div>
        </div>
    </div>
}

@section ScriptPage{
    <script src="~/Scripts/jquery.validate.min.js">
</script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js">
</script>
    }

